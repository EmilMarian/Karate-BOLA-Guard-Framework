{
  "method": "POST",
  "parameters": [],
  "path": "/books/v1",
  "requestBody": {
    "content": {
      "application/json": {
        "schema": {
          "properties": {
            "book_title": {
              "example": "book99",
              "type": "string"
            },
            "secret": {
              "example": "pass1secret",
              "type": "string"
            }
          },
          "type": "object"
        }
      }
    },
    "description": "Add new book with title and secret content only available to the user who added it.",
    "required": true
  },
  "responses": {
    "200": {
      "content": {
        "application/json": {
          "schema": {
            "properties": {
              "message": {
                "example": "Book has been added.",
                "type": "string"
              },
              "status": {
                "enum": [
                  "success",
                  "fail"
                ],
                "example": "success",
                "type": "string"
              }
            },
            "type": "object"
          }
        }
      },
      "description": "Sucessfully added a book"
    }
  }
}