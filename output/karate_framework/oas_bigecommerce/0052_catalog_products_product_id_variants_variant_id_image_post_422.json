{
  "method": "POST",
  "parameters": [
    {
      "description": "The ID of the `Product` to which the resource belongs.\n",
      "in": "path",
      "name": "product_id",
      "required": true,
      "schema": {
        "format": "int",
        "type": "number"
      }
    },
    {
      "description": "The ID of the `Variant`.\n",
      "in": "path",
      "name": "variant_id",
      "required": true,
      "schema": {
        "format": "int",
        "type": "number"
      }
    }
  ],
  "path": "/catalog/products/{product_id}/variants/{variant_id}/image",
  "requestBody": {
    "content": {
      "multipart/form-data": {
        "schema": {
          "properties": {
            "image_file": {
              "description": "An image file. Supported MIME types include GIF, JPEG, and PNG.\n",
              "format": "binary",
              "type": "string"
            }
          },
          "required": [
            "image_file"
          ],
          "type": "object"
        }
      }
    },
    "required": true
  },
  "responses": {
    "422": {
      "content": {
        "application/json": {
          "schema": {
            "allOf": [
              {
                "$ref": "#/components/schemas/BaseError"
              },
              {
                "properties": {
                  "errors": {
                    "$ref": "#/components/schemas/DetailedErrors"
                  }
                },
                "type": "object"
              }
            ]
          }
        }
      },
      "description": "Image was not valid. This is the result of a missing image_file field or an incorrect file type. See the response for more details.\n"
    }
  }
}