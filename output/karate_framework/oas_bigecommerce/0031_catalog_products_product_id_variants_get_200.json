{
  "method": "GET",
  "parameters": [
    {
      "description": "The ID of the `Product` to which the resource belongs.\n",
      "in": "path",
      "name": "product_id",
      "required": true,
      "schema": {
        "format": "int",
        "type": "number"
      }
    },
    {
      "description": "Control the page in a limited list of products.\n",
      "in": "query",
      "name": "page",
      "schema": {
        "type": "integer"
      }
    },
    {
      "description": "Control the items per page.\n",
      "in": "query",
      "name": "limit",
      "schema": {
        "type": "integer"
      }
    }
  ],
  "path": "/catalog/products/{product_id}/variants",
  "requestBody": {},
  "responses": {
    "200": {
      "content": {
        "application/json": {
          "schema": {
            "description": "Response payload for the Bigcommerce API.\n",
            "properties": {
              "data": {
                "items": {
                  "$ref": "#/components/schemas/Variant"
                },
                "type": "array"
              },
              "meta": {
                "$ref": "#/components/schemas/CollectionMeta"
              }
            },
            "type": "object"
          }
        }
      },
      "description": "An array of variants and metadata.\n"
    }
  }
}